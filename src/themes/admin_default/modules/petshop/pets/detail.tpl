<!-- BEGIN: main -->
<h2>Chi tiết sản phẩm</h2>
<div class="pet-detail">
    <h2>{PET.name}</h2>
    <img src="{PET.image}" alt="{PET.name}" class="pet-image">
    <p><strong>Loài:</strong> {PET.species_id}</p>
    <p><strong>Giống:</strong> {PET.breed_id}</p>
    <p><strong>Giới tính:</strong> {PET.gender}</p>
    <p><strong>Tuổi:</strong> {PET.age} tháng</p>
    <p><strong>Màu lông:</strong> {PET.fur_color}</p>
    <p><strong>Cân nặng:</strong> {PET.weight} kg</p>
    <p><strong>Nguồn gốc:</strong> {PET.origin}</p>
    <p><strong>Đã tiêm phòng:</strong> {PET.is_vaccinated}</p>
    <p><strong>Chi tiết tiêm phòng:</strong> {PET.vaccination_details}</p>
    <p><strong>Giá:</strong> {PET.price} VND</p>
    <p><strong>Giảm giá:</strong> {PET.discount} %</p>
    <p><strong>Số lượng trong kho:</strong> {PET.stock}</p>
    <p><strong>Đánh giá:</strong> {PET.rating} ⭐</p>
    <p><strong>Mô tả:</strong> {PET.description}</p>
</div>
<!-- END: main -->